<div class="form-horizontal">
  <div class="form-group">
    メッセージ一覧
  </div>
  
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  <div class="form-group">
   <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
     <label for="message_name" class="control-label col-md-2">名前:</label>
      <div class="col-md-4">
       <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
  <div class="form-group">
      <label for="message_name" class="control-label col-md-2">内容:</label>
       <div class="col-md-4">
        <%= f.text_area :body %>
    </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
  </div>
</div>
<% end %>